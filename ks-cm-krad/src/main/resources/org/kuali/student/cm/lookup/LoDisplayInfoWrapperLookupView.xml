<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">
                           
    <bean id="KS-LoDisplayInfoWrapper-DataObjectEntry" parent="DataObjectEntry">
        <property name="objectLabel" value="Learning Objective Display Information Wrapper" />
        <property name="dataObjectClass"
            value="org.kuali.student.cm.course.form.LoDisplayInfoWrapper" />
    </bean>

    <bean id="KS-LoDisplayInfoWrapper-LookupCriteriaGroup" parent="Uif-HorizontalBoxGroup">
        <property name="headerText" value="Lookup Criteria"/>
        <property name="fieldBindingObjectPath" value="lookupCriteria"/>
        <property name="footer">
            <bean parent="Uif-LookupCriteriaFooter"/>
        </property>
    </bean>
    
    <bean id="KS-LoDisplayInfoWrapper-LookupView" parent="KS-Uif-LookupView">
        <property name="id" value="LoDisplayInfoWrapperLookupView" />
        <property name="headerText" value="Find Learning Objectives" />
        <property name="dataObjectClassName"
            value="org.kuali.student.cm.course.form.LoDisplayInfoWrapper" />
        <property name="viewHelperServiceClass"
            value="org.kuali.student.cm.course.service.impl.LoDisplayInfoLookupableImpl" />
        <property name="criteriaGroup">
            <bean parent="KS-LoDisplayInfoWrapper-LookupCriteriaGroup"/>
        </property>
        <property name="criteriaFields">
            <list>
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="searchBy" p:label="Type Of Search"
                      p:required="true" p:id="searchByCriteria">
                    <property name="control">
                        <bean parent="KS-Uif-DropdownControl" p:onChangeScript="hideName();"/>
                    </property>
                    <property name="optionsFinder">
                        <bean class="org.kuali.student.lum.lu.ui.course.keyvalues.LoSearchByValuesFinder" p:addBlankOption="false"/>
                    </property>
                </bean>
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="name" p:id="searchByField"
                        p:render="@{lookupCriteria['searchBy'] ne 'ORGANIZATIONTYPE'}"
                        p:progressiveRender="@{lookupCriteria['searchBy'] ne 'ORGANIZATIONTYPE'}">
                    <property name="control">
                        <bean parent="KS-Uif-TextControl" p:additionalCssClasses="lo_lightbox_name" />
                    </property>
                </bean>
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="orgType" p:id="searchByOrgTypeField"
                      p:optionsFinderClass="org.kuali.student.lum.lu.ui.course.keyvalues.OrganizationTypeValuesFinder"
                      p:progressiveRender="@{lookupCriteria['searchBy'] eq 'ORGANIZATIONTYPE'}">
                    <property name="control">
                        <bean parent="KS-Uif-DropdownControl" p:additionalCssClasses="lo_lightbox_name" p:onChangeScript="hideName();"/>
                    </property>
                </bean>
                <bean parent="Uif-SecondaryActionButton" p:actionLabel="Show" p:additionalCssClasses="lo_lightbox_name"  p:methodToCall="search" p:onClickScript="hideName();"/>
            </list>
        </property>

        <property name="resultFields">
            <list>
                <bean parent="KS-Uif-DataField" p:propertyName="code" p:label="Code" />
                <bean parent="KS-Uif-DataField" p:propertyName="typeName" p:label="Type" p:hidden="@{(lookupCriteria['searchBy'] eq 'COURSE')}"/>
                <bean parent="KS-Uif-DataField" p:propertyName="name" p:label="Category" />
                <bean parent="KS-Uif-DataField" p:propertyName="descr.plain" p:label="Description" p:escapeHtmlInPropertyValue="false" />
           </list>
        </property>
        <property name="footer">
            <bean parent="KS-Uif-FooterBase">
                <property name="items">
                    <list>
                        <bean id="KS-AddLo-Button" parent="KS-Uif-PrimaryActionButton">
                            <property name="actionLabel" value="Add Learning Objective(s)"/>
                            <property name="methodToCall" value=""/>
                        </bean>
                        <bean id="KS-CancelLo-Button" parent="Uif-CancelAction" p:onClickScript="closeLightbox();return false;"/>
                    </list>
                </property>
            </bean>
        </property>
    </bean>
    
</beans>                        