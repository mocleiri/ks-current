<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

    <context:annotation-config />

    <bean id="debugMode" class="java.lang.Boolean">
        <constructor-arg value="false" />
    </bean>
    
    <bean id="courseRegistrationService" class="org.kuali.student.enrollment.class2.courseregistration.service.decorators.CourseRegistrationServiceProcessCheckDecorator" >
        <property name="nextDecorator" ref="courseRegistrationServiceLoadCalculationDecorator"/>
        <property name="krmsEvaluator" ref="krmsEvaluator"/>
    </bean>
    <bean id="courseRegistrationServiceLoadCalculationDecorator" 
          class="org.kuali.student.enrollment.class2.courseregistration.service.decorators.CourseRegistrationLoadCalculationDecorator" >
        <property name="registrationRequestMerger" ref="mergerImpl"/>
        <property name="loadCalculatorRuleFactory" ref="loadCalculatorRuleFactoryHardwiredImpl"/>
        <property name="courseOfferingService" ref="courseOfferingService"/>
        <property name="gesService" ref="gesService"/>
        <property name="nextDecorator" ref="courseRegistrationServiceMapImpl"/>
    </bean>
    <bean id="courseRegistrationServiceMapImpl" class="org.kuali.student.enrollment.class2.courseregistration.service.impl.CourseRegistrationServiceMapImpl" >
        <property name="merger" ref="mergerImpl"/>
    </bean>
    <bean id="krmsEvaluator" class="org.kuali.student.r2.core.process.evaluator.KRMSEvaluator" >
        <property name="defaultFacts">
            <map>
                <!--needed services-->
                <entry key="atpService" value-ref="atpService"/>
                <entry key="processService" value-ref="processService"/>
                <entry key="courseRegistrationService" value-ref="courseRegistrationService"/>
                <entry key="populationService" value-ref="populationService"/>
                <entry key="exemptionService" value-ref="exemptionService"/>
                <entry key="identityService" value-ref="identityService"/>
                <entry key="holdService" value-ref="holdService"/>
                <entry key="gesService" value-ref="gesService"/>
                <entry key="registrationRequestMerger" value-ref="mergerImpl"/>
                <entry key="loadCalculatorRuleFactory" value-ref="loadCalculatorRuleFactoryHardwiredImpl"/>
                <!--factory to be replaced by someething not hardwired-->
                <entry key="propositionFactory" value-ref="propositionFactoryHardwiredImpl"/>
                <!--flag to tell if should log sucesses as well as failures-->
                <entry key="shouldRecordInstructionSuccesses" > 
                    <bean class="java.lang.Boolean">
                        <constructor-arg value="true" />
                    </bean>
                </entry>
            </map>
        </property>
        <property name="termResolvers">
            <list>
                <bean class="org.kuali.student.r2.core.process.krms.termresolver.PersonId2DeceasedDateTermResolver" />
                <bean class="org.kuali.student.r2.core.process.krms.termresolver.ContextInfo2AsOfDateTermResolver" />
                <bean class="org.kuali.student.r2.core.process.krms.termresolver.RegistrationRequest2PersonIdTermResolver" />
                <bean class="org.kuali.student.r2.core.process.krms.termresolver.RegistrationRequest2AtpIdTermResolver" />
                <bean class="org.kuali.student.r2.core.process.krms.termresolver.RegistrationRequestId2RegistrationRequestTermResolver" />
                <bean class="org.kuali.student.r2.core.process.krms.termresolver.AtpId2AtpTermResolver" />
            </list>
        </property>
    </bean>

    <bean id="identityService" class="org.kuali.student.r2.core.process.ProcessPocIdentityServiceDecorator">
        <constructor-arg ref="identityServiceMapImpl"/>
    </bean>
    <bean id="identityServiceMapImpl" class="org.kuali.student.kim.permission.mock.IdentityServiceMapImpl"/>
            
    <bean id="propositionFactoryHardwiredImpl" class="org.kuali.student.r2.core.process.evaluator.PropositionFactoryHardwiredImpl" >  
    </bean>
    <bean id="loadCalculatorRuleFactoryHardwiredImpl" class="org.kuali.student.poc.rules.credit.limit.LoadCalculatorRuleFactoryHardwiredImpl" >
        <property name="courseOfferingService" ref="courseOfferingService" />  
    </bean>
    
    <bean id="mergerImpl" class="org.kuali.student.poc.rules.credit.limit.RegistrationRequestMergerImpl" >   
        <property name="courseOfferingService" ref="courseOfferingService"/>          
        <property name="courseRegistrationService" ref="courseRegistrationService"/>        
    </bean>
    
    <bean id="courseOfferingServiceMapImpl" class="org.kuali.student.enrollment.class2.courseoffering.service.impl.CourseOfferingServiceMapImpl" />
    <bean id="courseOfferingService" class="org.kuali.student.r2.core.process.ProcessPocCourseOfferingServiceDecorator" init-method="init" >
        <property name="nextDecorator" ref="courseOfferingServiceMapImpl"/>
    </bean>
    
    
    <bean id="atpServiceMapImpl" class="org.kuali.student.r2.core.class1.atp.service.impl.AtpServiceMapImpl" />
    <bean id="atpService" class="org.kuali.student.r2.core.process.ProcessPocAtpServiceDecorator" init-method="init" >
        <property name="nextDecorator" ref="atpServiceMapImpl"/>
    </bean>
    
    
    <bean id="processServiceMapImpl" class="org.kuali.student.r2.core.process.service.impl.ProcessServiceMapImpl" />
    <bean id="processService" class="org.kuali.student.r2.core.process.ProcessPocProcessServiceDecorator"  init-method="init" >
        <property name="nextDecorator" ref="processServiceMapImpl"/>
    </bean>
    
    <bean id="populationServiceMapImpl" class="org.kuali.student.poc.rules.population.PopulationServiceMapImpl" />
    <bean id="populationService" class="org.kuali.student.r2.core.process.ProcessPocPopulationServiceDecorator"  init-method="init" >
        <property name="nextDecorator" ref="populationServiceMapImpl"/>
    </bean>
    
    
    <bean id="exemptionServiceMapImpl" class="org.kuali.student.r2.core.exemption.service.impl.ExemptionServiceMapImpl" />
    <bean id="exemptionService" class="org.kuali.student.r2.core.process.ProcessPocExemptionServiceDecorator"  init-method="init" >
        <property name="nextDecorator" ref="exemptionServiceMapImpl"/>
    </bean>
    
    <bean id="holdService" class="org.kuali.student.r2.core.process.ProcessPocHoldServiceDecorator">
        <constructor-arg ref="holdServiceMapImpl"/>
    </bean>
    <bean id="holdServiceMapImpl" class="org.kuali.student.r2.core.class1.hold.mock.HoldServiceMapImpl"/>
    <bean id="gesService" class="org.kuali.student.r2.core.process.ProcessPocGesServiceDecorator">
        <constructor-arg ref="gesServiceMapImpl"/>
    </bean>
    <bean id="gesServiceMapImpl" class="org.kuali.student.enrollment.class2.ges.service.impl.GesServiceMapImpl" >
        <property name="populationService" ref="populationService" />
        <property name="atpService" ref="atpService" />
    </bean>
</beans>
