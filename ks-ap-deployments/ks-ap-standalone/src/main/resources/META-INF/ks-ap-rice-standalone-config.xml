<!--
    This is the standalone default settings config file.  It is always loaded to read default settings.
    Parameter replacement is performed in both config files and their parents (at runtime), and the
    Spring config file (through a PropertyPlaceholderConfigurer).
    Variable syntax:
    ${varname}
    ${institution}
-->
<config>
    <!-- Module Settings -->
    <param name="module.name">ks-ap-standalone</param>
    <param name="application.id">ks</param>

    <param name="ks.myplan.externalizable.images.url">../ks-myplan/images/</param>

    <!-- used to show KS links in Rice Portal -->
    <param name="portal.show.sample.app">true</param>

    <!-- Start of Additional Properties files -->

    <!-- Location of Security configurations KS Defaults-->
    <param name="config.location">classpath:ks-security-config.xml</param>

    <!-- Default Standalone Settings -->
    <param name="config.location">classpath:META-INF/standalone-config-defaults.xml</param>

    <!-- Default KRAD Settings -->
    <param name="config.location">classpath:META-INF/common-config-defaults.xml</param>

    <!-- Default KRAD Locations -->
    <param name="config.location">classpath:META-INF/common-config-locations.xml</param>

    <!-- Kuali Student Core Settings-->
    <param name="config.location">classpath:META-INF/ks-core-config.xml</param>

    <!-- Kuali Student LUM Settings -->
    <param name="config.location">classpath:META-INF/ks-lum-config.xml</param>

    <!-- Kuali Student Enroll Settings -->
    <param name="config.location">classpath:META-INF/ks-enroll-config.xml</param>

    <!-- Kuali Student AP Settings -->
    <param name="config.location">classpath:META-INF/ks-ap/ks-ap-config.xml</param>

    <!-- Additional Settings To Load -->
    <param name="config.location">${additional.config.locations}</param>

    <!-- Additional Kim Authorization Beans -->
    <param name="rice.kim.additionalSpringFiles">classpath:ks-kim-context.xml</param>
    <!-- End AdditionalProperties Files -->

    <!-- Mode to run the KS modules in-->
    <param name="kscore.mode">LOCAL</param>
    <param name="kslum.mode">LOCAL</param>
    <param name="ksenroll.mode">LOCAL</param>
    <param name="ksap.mode">LOCAL</param>

    <!-- The Version of the MyPlan -->
    <param name="myplan.version">0.4.5-KSAP-SNAPSHOT</param>

    <!-- Application Code -->
    <param name="app.code">ks-ap-rice-standalone</param>

    <!-- Id of the Application -->
    <param name="application.id">RICE</param>

    <!-- Configure Logger-->
    <param name="rice.logging.configure">true</param>

    <!-- Location Log4j Configuration -->
    <param name="log4j.settings.path">classpath:META-INF/log4j.properties</param>

    <!-- Start Url Locations -->
    <!-- The base url location -->
    <param name="appserver.url">http://localhost:8081</param>

    <!-- The base url of the standalone -->
    <param name="lum.application.url" override="false">${application.url}</param>

    <!-- Curriculum management main page url with view set -->
    <param name="ks.lum.MainEntryPoint" override="false">${lum.application.url}/org.kuali.student.lum.lu.ui.main.LUMMain/LUMMain.jsp?view=CURRICULUM_MANAGEMENT</param>

    <!-- Curriculum management main page url -->
    <param name="ks.home.MainEntryPoint" override="false">${lum.application.url}/org.kuali.student.lum.lu.ui.main.LUMMain/LUMMain.jsp</param>

    <!-- MyPlan course lookup url  -->
    <param name="ks.ap.MainEntryPoint" override="false">${lum.application.url}/myplan/course?methodToCall=start&amp;viewId=CourseSearch-FormView</param>
    <param name="ks.ap.planner" override="false">${lum.application.url}/myplan/plan?methodToCall=start&amp;viewId=PlannedCourses-FormView</param>
    <param name="ks.ap.audit" override="false">${lum.application.url}/myplan/audit?methodToCall=audit&amp;viewId=DegreeAudit-FormView</param>
    <!-- End Url Location -->

    <!-- Start Cache Configuration-->
    <!-- KS Specific Cache -->
    <param name="ks.cache.config.file">classpath:ks-ehcache.xml</param>
    <param name="ks.enum.enable.caching">true</param>
    <param name="ks.atp.enable.caching">true</param>
    <param name="ks.org.enable.caching">true</param>
    <param name="ks.lrc.enable.caching">true</param>
    <param name="ks.statement.enable.caching">true</param>
    <param name="ks.lu.enable.caching">true</param>
    <param name="ks.searchForm.enable.caching">true</param>
    <param name="ks.academicCalendar.enable.caching">true</param>

    <!-- KS Lum Specific Cache -->
    <param name="ks.lum.gwt.cache.config.file">classpath:ks-lum-gwt-ehcache.xml</param>
    <param name="ks.lum.gwt.metadata.enable.caching">true</param>

    <!-- MyPlan Specific Cache -->
    <param name="myplan.cache.config.file">classpath:myplan-ehcache.xml</param>
    <param name="myplan.courseSearch.enable.caching">true</param>
    <param name="ks.courseOffering.enable.caching">true</param>
    <param name="ks.academicRecord.enable.caching">true</param>
    <param name="ks.degreeAudit.enable.caching">true</param>
    <!-- End Cache Configuration-->

    <!-- KSB -->
    <param name="Routing.ImmediateExceptionRouting">true</param>

    <!-- BEGIN KUALI STUDENT SETTINGS OVERRIDES -->
    <!-- KEW -->
    <param name="xml.pipeline.lifecycle.enabled">true</param>
    <param name="email.reminder.lifecycle.enabled">true</param>
    <param name="plugin.registry.enabled">false</param>
    <param name="notification.quartz.autostartup">false</param>
    <param name="notification.concurrent.jobs">false</param>
    
    <param name="simpleDocumentActionsService.security">false</param>
    <param name="secure.workflowutility.soapservice.endpoint">false</param>

    <!-- KIM -->
    <param name="kim.soapExposedService.jaxws.security">false</param>
    <param name="kimRoleServiceSOAP.expose">true</param>
    <!-- END KUALI STUDENT SETTINGS OVERRIDES -->

    <!-- Start Database Configuration-->
    <!-- Base Database settings -->
    <param name="datasource.ojb.platform">Oracle9i</param>
    <param name="datasource.url">jdbc:oracle:thin:@localhost:1521:XE</param>
    <param name="datasource.username">KSBUNDLED</param>
    <param name="datasource.password">KSBUNDLED</param>

    <!-- MyPlan Database Settings -->
    <param name="ks.ap.datasource.driver.name">oracle.jdbc.OracleDriver</param>
    <param name="ks.ap.datasource.url">jdbc:oracle:thin:@localhost:1521:XE</param>
    <param name="ks.ap.jpa.DatabasePlatform">org.hibernate.dialect.Oracle10gDialect</param>
    <param name="ks.ap.datasource.validationQuery">select 1 from dual</param>

    <param name="ks.ap.datasource.username">KSBUNDLED</param>
    <param name="ks.ap.datasource.password">KSBUNDLED</param>
    <param name="ks.ap.datasource.maxSize" override="false">10</param>
    <param name="ks.ap.datasource.minSize" override="false">2</param>
    <param name="ks.ap.datasource.maxWait" override="false">600</param>

    <!-- LUM Database Settings -->
    <param name="ks.lum.datasource.url">${datasource.url}</param>
    <param name="ks.lum.datasource.username">${datasource.username}</param>
    <param name="ks.lum.datasource.password">${datasource.password}</param>

    <!-- Enroll Database Settings -->
    <param name="ks.enroll.datasource.url">${datasource.url}</param>
    <param name="ks.enroll.datasource.username">${datasource.username}</param>
    <param name="ks.enroll.datasource.password">${datasource.password}</param>

    <!-- Core Database Settings -->
    <param name="ks.core.datasource.url">${datasource.url}</param>
    <param name="ks.core.datasource.username">${datasource.username}</param>
    <param name="ks.core.datasource.password">${datasource.password}</param>


    <!-- End Database Configuration-->

    <!-- Keystore Configuration -->
    <param name="keystore.file">${user.home}/Desktop/AcademicRoadmap/ks-ap/ks-ap-deployments/ks-ap-standalone/src/main/resources/rice.keystore</param>
    <param name="keystore.alias">rice</param>
    <param name="keystore.password">r1c3pw</param>
    <param name="keystore.security">false</param>
		
	<!-- Set all services to /services instead of /remoting -->
	<param name="serviceServletUrl">${application.url}/services/</param>

    <param name="rice.portal.allowed.regex">^(${lum.application.url}|${application.url})(/.*|)</param>

</config>