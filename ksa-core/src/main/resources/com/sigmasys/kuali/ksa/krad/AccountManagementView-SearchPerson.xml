    <!--
     ********************************************************************************************************************
                                         PAGE: Search Person Account
     ********************************************************************************************************************
     -->

    <bean parent="Uif-Page" id="SearchPersonAccountPage" p:id="SearchPersonAccountPage" p:title="Account Management">
        <property name="headerText" value="Account Management"/>
        <property name="items">
            <list>
                <bean parent="Uif-VerticalBoxSection">
                    <property name="title" value="Search for a person&apos;s account"/>
                    <property name="items">
                        <list>
                            <bean parent="Uif-MessageField"
                                  p:messageText="This form is used to search for an account held by a person."/>
                            <!-- AccountInfo:Common Identifiers Information -->
                            <ref bean="SearchPersonAccountCommonIdsSecion"/>
                            <!-- Biographic Information -->
                            <ref bean="SearchPersonAccountBiographicInfoSecion"/>
                            <!-- Account Info:Additional -->
                            <ref bean="SearchPersonAccountAdditionalInfoSection"/>
                            <!-- Account Info:Auditable -->
                            <ref bean="SearchPersonAccountAuditableInfoSection"/>
                            <!-- User Settings -->
                            <ref bean="SearchPersonAccountUserSettingsSection"/>
                            <!-- Search Result Preferences -->
                            <ref bean="SearchPersonAccountSearchPreferencesSection"/>
                            <!-- Submit section -->
                            <bean parent="Uif-HorizontalBoxSection">
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-SecondaryActionButton-Small"
                                              p:methodToCall="doSearchPersonAccount"
                                              p:actionLabel="Search"
                                              p:onClickScript="writeHiddenToForm(&quot;actionParameters[pageId]&quot;, &quot;SearchPersonAccountPage&quot;);">
                                        </bean>
                                        <bean parent="Uif-ActionLink" p:actionLabel="Cancel" p:methodToCall="cancel"
                                              p:preSubmitCall="return confirm('Are you sure you want to cancel?');"/>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>


