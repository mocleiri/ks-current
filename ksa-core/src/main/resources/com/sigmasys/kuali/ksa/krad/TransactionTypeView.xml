<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/util
                           http://www.springframework.org/schema/util/spring-util-3.0.xsd">

    <bean id="transactionTypeHelper" class="com.sigmasys.kuali.ksa.krad.helper.TransactionTypeHelper"/>

    <bean id="TransactionTypeView" parent="Uif-KsaFormView" p:footer.render="false">
        <property name="title" value="Transaction Types"/>
        <property name="headerText" value="Transaction Types"/>
        <property name="entryPageId" value="TransactionTypePage"/>
        <property name="navigation" ref="settingsNavigation"/>
        <property name="items">
            <list merge="true">

                <!--Begin Transaction Type Page-->

                <bean parent="Uif-Page" p:id="TransactionTypePage" p:title="Transaction Types">
                    <property name="headerText" value="Transaction Types"/>
                    <property name="items">
                        <list>
                            <bean parent="Uif-HeaderFour" p:headerText="View Transaction Types"/>
                            <bean parent="Uif-Message" p:style="width: 80%" p:messageText="The transaction type is a very important type in the KSA system.  Transactions contain the fundamental information that is used to support a number of complex operations."/>
                            <!--<ref bean="addSection"/>-->
                            <ref bean="transactionTypeTabs"/>
                        </list>
                    </property>
                </bean>

                <bean parent="Uif-Page" p:id="TransactionTypeDetailsPage" p:title="Transaction Type Details">
                    <property name="headerText" value="Transaction Type Details"/>
                    <property name="items">
                        <list>
                            <bean parent="Uif-HorizontalBoxSection">
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-Link" p:linkText="Transaction Type Summary" p:target="_self"
                                              p:href="transactionTypeView?methodToCall=get&amp;viewId=TransactionTypeView&amp;pageId=TransactionTypePage"/>
                                    </list>
                                </property>
                            </bean>
                            <ref bean="detailTransactionTypeSection"/>
                        </list>
                    </property>
                </bean>

                <bean parent="Uif-Page" p:id="TransactionTypeCreatePage" p:title="Create Transaction Type">
                    <property name="headerText" value="Create Transaction Type"/>
                    <property name="items">
                        <list>
                            <bean parent="Uif-HorizontalBoxSection">
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-Link" p:linkText="Transaction Type Summary" p:target="_self"
                                              p:href="transactionTypeView?methodToCall=get&amp;viewId=TransactionTypeView&amp;pageId=TransactionTypePage"/>
                                    </list>
                                </property>
                            </bean>
                            <!--  Status message -->
                            <bean parent="Uif-MessageField" p:messageText="@{statusMessage}"/>
                            <ref bean="editTransactionTypeSection"/>
                            <ref bean="tagGroup"/>
                            <ref bean="glBreakdownList"/>
                            <ref bean="TransactionTypeListShortPermissionList"/>
                            <bean parent="Uif-SecondaryActionButton-Small" p:methodToCall="insert" p:actionLabel="Submit" p:render="@{transactionsAffectedCount == 0}"/>
                            <bean parent="Uif-SecondaryActionButton-Small" p:actionLabel="Submit"  p:render="@{transactionsAffectedCount > 0}"
                                    p:preSubmitCall="return showLightboxComponent('affectedCountLightbox');"/>
                            <bean id="affectedCountLightbox" parent="Uif-VerticalBoxSection" p:layoutManager.orientation="VERTICAL">
                                <property name="hidden" value="true"/>
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-HeaderTwo" p:headerText="Transaction Type Update"/>
                                        <bean parent="Uif-Message" p:style="color: red;" p:messageText="The requested action will affect @{transactionsAffectedCount} transactions.  The data in these records will be inconsistent with the new Transaction Type Settings and may cause future instability.  Additionally, processing this action may take a long time."/>
                                        <bean parent="Uif-HorizontalBoxSection"><property name="items"><list>
                                            <bean parent="Uif-SecondaryActionButton-Small" p:methodToCall="insert" p:onClickScript="jQuery.fancybox.close();" p:actionLabel="Submit"/>
                                            <bean parent="Uif-SecondaryActionButton-Small" p:actionLabel="Cancel"  p:onClickScript="jQuery.fancybox.close();"/>
                                        </list></property></bean>
                                    </list>
                                </property>
                            </bean>

                        </list>
                    </property>
                </bean>
                <!--End TransactionType Page-->

            </list>
        </property>
        <!--
                <property name="additionalCssFiles" ref=""/>
                <property name="additionalJsFiles" ref=""/>
                <property name="defaultBindingObjectPath" value=""/>
        -->
        <property name="viewHelperService" ref="transactionTypeHelper"/>
        <property name="formClass" value="com.sigmasys.kuali.ksa.krad.form.SettingsForm"/>
    </bean>


    <bean id="transactionTypeTabs" parent="Uif-TabGroup"><property name="items"><list>
        <bean parent="Uif-VerticalBoxSection" p:headerText="Roll-up">
            <property name="items">
                <list>
                    <bean parent="Uif-Link" p:linkText="Create New Transaction Type" p:target="_self"
                          p:href="transactionTypeView?methodToCall=create&amp;viewId=TransactionTypeView&amp;pageId=TransactionTypeCreatePage"/>
                    <ref bean="tableTransactionTypeSection"/>

                </list>
            </property>
        </bean>
        <bean parent="Uif-VerticalBoxSection" p:headerText="Processing Priority">
            <property name="items">
                <list>
                    <bean parent="Uif-Message" p:style="width: 80%" p:messageText="Transaction types will be processed during payment application in the following priority order."/>
                    <ref bean="transactionTypeProcessingPriority"/>

                </list>
            </property>
        </bean>
    </list></property></bean>


    <!--
    ********************************************************************************************************************
					 transactionType List section
    A table containing a list of transactionType used in the system
    ********************************************************************************************************************
    -->
    <bean id="tableTransactionTypeSection" parent="Uif-Disclosure-TableCollectionSection" p:layoutManager.numberOfColumns="4" p:width="85%">
        <property name="title" value="View Transaction Types"/>
        <property name="readOnly" value="true"/>
        <property name="collectionObjectClass" value="com.sigmasys.kuali.ksa.krad.model.TransactionTypeGroupModel"/>
        <property name="propertyName" value="transactionTypes"/>
        <property name="layoutManager.sequencePropertyName" value="currentTransactionType.id.id"/>
        <property name="layoutManager.richTable.render" value="true"/>
        <property name="layoutManager.renderSequenceField" value="false"/>
        <property name="layoutManager.applyDefaultCellWidths" value="false"/>
        <property name="layoutManager.richTable.disableTableSort" value="false"/>
        <property name="layoutManager.richTable.templateOptions">
            <map merge="true">
                <entry key="bPaginate" value="true"/>
                <entry key="iDisplayLength" value="20"/>
                <entry key="bSort" value="true" />
            </map>
        </property>
        <!--<property name="layoutManager.groupingPropertyNames"> <list> <value>transactionType.id.id</value> </list> </property>-->
        <property name="items">
            <list>
                <bean parent="Uif-InputField" p:label="ID" p:propertyName="currentTransactionType.id.id" p:width="10%"/>
                <bean parent="Uif-HorizontalFieldGroup" p:label="Statement Text">
                    <property name="items">
                        <list>
                            <bean parent="Uif-MessageField" p:messageText="@{#line.currentTransactionType.description} (@{#line.transactionTypes.size()})"/>
                        </list>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:label="Type" p:propertyName="currentTransactionType.type" p:width="10%"/>
                <bean parent="Uif-LinkField"  p:linkText="Add new from model"
                      p:href="transactionTypeView?methodToCall=create&amp;viewId=TransactionTypeView&amp;pageId=TransactionTypeCreatePage&amp;model=@{#line.currentTransactionType.id.id}"/>
            </list>
        </property>
        <property name="layoutManager.expandDetailsActionPrototype">
            <bean parent="Uif-ExpandDetailsImageAction"/>
        </property>
        <property name="layoutManager.ajaxDetailsRetrieval" value="true"/>
        <property name="layoutManager.rowDetailsGroup">
            <ref bean="transactionTypeSubList"/>
        </property>
    </bean>

    <bean id="transactionTypeSubList" parent="Uif-TableSubCollection-WithinSection" p:layoutManager.numberOfColumns="7">
        <property name="headerText" value="History" />
        <property name="collectionObjectClass" value="com.sigmasys.kuali.ksa.krad.model.TransactionTypeModel" />
        <property name="propertyName" value="transactionTypes" />
        <property name="layoutManager.sequencePropertyName" value="id.id" />
        <property name="layoutManager.richTable.render" value="true" />
        <property name="layoutManager.renderSequenceField" value="false"/>
        <property name="style" value="width: 100%;"/>
        <property name="layoutManager.richTable.templateOptions">
            <map merge="true">
                <entry key="bPaginate" value="false"/>
                <entry key="bInfo" value="false"/>
                <entry key="bFilter" value="false"/>
            </map>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-InputField" p:propertyName="transactionType.startDate" p:label="Start Date" p:style="width: 10%;"/>
                <bean parent="Uif-HorizontalFieldGroup" p:label="End Date" p:style="width: 10%;">
                    <property name="items">
                        <list>
                            <bean parent="Uif-InputField" p:propertyName="transactionType.endDate" p:render="@{!#empty(#line.transactionType.endDate)}" p:style="width: 10%;"/>
                            <bean parent="Uif-MessageField" p:messageText="Current" p:render="@{#empty(#line.transactionType.endDate)}"/>
                        </list>
                    </property>
                </bean>
                <bean parent="Uif-HorizontalFieldGroup" p:label="Description">
                    <property name="items">
                    <list>
                        <bean parent="Uif-LinkField" p:linkText="@{#line.transactionType.description}"
                              p:href="transactionTypeView?methodToCall=edit&amp;viewId=TransactionTypeView&amp;pageId=TransactionTypeCreatePage&amp;model=@{#line.transactionType.id.id}&amp;subCode=@{#line.transactionType.id.subCode}"/>
                        <bean parent="Uif-ImageField" p:source="../images/audit_guy.png" p:style="float: right;" p:altText="" p:title="">
                            <property name="toolTip">
                                <bean parent="Uif-Tooltip" p:tooltipContent="@{#line.auditTooltip}"/>
                            </property>
                        </bean>
                        <bean parent="Uif-ImageField" p:source="../images/tag.png" p:style="cursor:pointer; float: right;" p:altText="" p:title=""
                              p:render="@{#line.tags.size() > 0}">
                            <property name="toolTip">
                                <bean parent="Uif-Tooltip" p:tooltipContent="Tags: @{#line.tagList}"/>
                            </property>
                        </bean>
                        <!--
                        p:onClickScript="showLightboxComponent('tagLightboxTransactionType@{#lineSuffix}');"
                        <bean id="tagLightboxTransactionType" parent="Uif-VerticalBoxSection" p:layoutManager.orientation="VERTICAL">
                            <property name="hidden" value="true"/>
                            <property name="items">
                                <list>
                                    <bean parent="Uif-HeaderTwo" p:headerText="Transaction Type Tags"/>
                                    <ref bean="tagGroup"/>

                                </list>
                            </property>
                        </bean>
                        -->
                    </list>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="rollupText" p:label="Roll-up" p:style="width: 35%"/>
                <!--
                <bean parent="Uif-InputField" p:propertyName="glBreakdownType" p:label="GL Breakdown" p:style="width: 10%">
                    <property name="toolTip">
                        <bean parent="Uif-Tooltip" p:tooltipContent="@{#line.glBreakdownTooltip}"/>
                    </property>
                </bean>
                -->
            </list>
        </property>
    </bean>


    <!--
    ********************************************************************************************************************
                     transactionType Priority List section
    A table containing a list of transactionType used in the system
    ********************************************************************************************************************
    -->
    <bean id="transactionTypeProcessingPriority" parent="Uif-Disclosure-TableCollectionSection">
        <!--<property name="title" value="View Transaction Types"/>-->
        <property name="readOnly" value="true"/>
        <property name="collectionObjectClass" value="com.sigmasys.kuali.ksa.krad.model.TransactionTypeGroupModel"/>
        <property name="propertyName" value="transactionTypes"/>
        <property name="layoutManager.sequencePropertyName" value="currentTransactionType.id.id"/>
        <property name="layoutManager.richTable.render" value="true"/>
        <property name="layoutManager.renderSequenceField" value="false"/>
        <!--<property name="layoutManager.applyDefaultCellWidths" value="false"/> -->
        <!--<property name="layoutManager.richTable.disableTableSort" value="false"/>-->
        <property name="layoutManager.richTable.templateOptions">
            <map merge="true">
                <entry key="bPaginate" value="true"/>
                <entry key="iDisplayLength" value="20"/>
                <entry key="bSort" value="true" />
                <!--<entry key="aoColumns"
                       value="[
                          {'sTitle':'ID', 'bSortable':false, 'bSearchable':true},
                          {'sTitle':'Transaction Type Description', 'bSortable':false, 'bSearchable':true},
                          {'sTitle':'Quick Move', 'bSortable':false, 'bSearchable':false},
                          {'sTitle':'Priority', 'bSortable':true, 'bSearchable':false}
                            ]"/>-->
            </map>
        </property>
        <property name="layoutManager.groupingPropertyNames"> <list> <value>currentTransactionType.priority</value> </list> </property>
        <property name="items">
            <list>
                <bean parent="Uif-InputField" p:label="ID" p:propertyName="currentTransactionType.id.id" p:readOnly="true" p:width="10%"/>
                <bean parent="Uif-InputField" p:label="Transaction Type Description" p:propertyName="currentTransactionType.description"  p:readOnly="true" p:width="50%"/>
                <bean parent="Uif-HorizontalFieldGroup" p:label="Quick Move" p:width="20%;">
                    <property name="items">
                        <list>
                            <bean parent="Uif-ActionLink" p:methodToCall="priority" p:actionParameters="model:@{#line.currentTransactionType.id.id},priority:max">
                                <property name="actionImage">
                                    <bean parent="Uif-Image" p:source="../images/up-icon.png" p:altText="Max"/>
                                </property>
                            </bean>
                            <bean parent="Uif-ActionLink" p:methodToCall="priority" p:actionParameters="model:@{#line.currentTransactionType.id.id},priority:plus1">
                                <property name="actionImage">
                                    <bean parent="Uif-Image" p:source="../images/up-equal.png" p:altText="Add 1"/>
                                </property>
                            </bean>
                            <bean parent="Uif-ActionLink" p:methodToCall="priority" p:actionParameters="model:@{#line.currentTransactionType.id.id},priority:minus1">
                                <property name="actionImage">
                                    <bean parent="Uif-Image" p:source="../images/down-equal.png" p:altText="Minus 1"/>
                                </property>
                            </bean>
                            <bean parent="Uif-ActionLink" p:methodToCall="priority" p:actionParameters="model:@{#line.currentTransactionType.id.id},priority:min">
                                <property name="actionImage">
                                    <bean parent="Uif-Image" p:source="../images/down-icon.png" p:altText="Min"/>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:label="Priority" p:propertyName="currentTransactionType.priority" p:readOnly="false" p:width="10%"/>
                <!--
                <bean parent="Uif-LinkField"  p:linkText="Add new from model"  p:readOnly="true"
                      p:href="transactionTypeView?methodToCall=create&amp;viewId=TransactionTypeView&amp;pageId=TransactionTypeCreatePage"/>
                -->
            </list>
        </property>
    </bean>

    <bean id="detailTransactionTypeSection" parent="Uif-VerticalBoxSection">
        <property name="title" value="Transaction Type Details View"/>
        <property name="items">
            <list>
                <bean parent="Uif-InputField"
                      p:propertyName="transactionType.id.id"
                      p:labelPlacement="TOP"
                      p:label="Symbol">
                    <property name="readOnly" value="true"/>
                    <property name="control">
                        <bean parent="Uif-TextControl"
                              p:size="11" p:maxLength="10"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField"
                      p:propertyName="transactionType.id.subCode"
                      p:label="Sub Code"
                      p:labelPlacement="TOP"
                      p:required="true">
                    <property name="readOnly" value="true"/>
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="20" p:maxLength="100"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:label="Description"
                      p:propertyName="transactionType.transactionType.description" p:labelPlacement="TOP">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="20" p:maxLength="100"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="transactionType.transactionType.startDate"
                      p:label="Start Date"
                      p:instructionalText="Start date of the Transaction Type"
                      p:fieldLabel.renderColon="true"
                      p:labelPlacement="TOP"
                      p:maxLength="10"
                      p:required="true">
                    <property name="bindingInfo.bindToForm" value="true"/>
                    <property name="control">
                        <bean parent="Uif-DateControl" p:size="11"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="transactionType.transactionType.endDate"
                      p:label="End Date"
                      p:instructionalText="End date of the Transaction Type"
                      p:fieldLabel.renderColon="true"
                      p:labelPlacement="TOP"
                      p:maxLength="10"
                      p:required="true">
                    <property name="bindingInfo.bindToForm" value="true"/>
                    <property name="control">
                        <bean parent="Uif-DateControl" p:size="11"/>
                    </property>
                </bean>

                <bean parent="Uif-SecondaryActionButton-Small" p:methodToCall="update"
                      p:actionLabel="Submit"
                      p:onClickScript="writeHiddenToForm(&quot;actionParameters[entityId]&quot;, &quot;@{transactionType.id.id}&quot;);">
                    <!--<property name="actionImage">
                        <bean parent="Uif-ImageField"
                              p:source="@{#ConfigProperties['krad.externalizable.images.url']}ks/icon_btn_add.png"/>
                    </property>-->
                </bean>
                <!--  Status message -->
                <bean parent="Uif-MessageField" p:messageText="@{statusMessage}"/>
            </list>
        </property>
    </bean>

    <bean id="editTransactionTypeSection" parent="Uif-HorizontalBoxSection">
        <property name="title" value="Transaction Type Details View"/>
        <property name="items">
            <list>
                <bean parent="Uif-VerticalBoxSection">
                    <property name="items">
                        <list>
                            <bean parent="Uif-InputField" p:propertyName="type" p:labelPlacement="TOP" p:label="Transaction Type">
                                <property name="control">
                                    <bean parent="Uif-DropdownControl" p:options-ref="TransactionTypeList"/>
                                </property>
                            </bean>
                            <bean parent="Uif-InputField" p:propertyName="code" p:label="Transaction Code" p:labelPlacement="TOP" p:required="true">
                                <property name="control">
                                    <bean parent="Uif-TextControl" p:size="20" p:maxLength="100"/>
                                </property>
                            </bean>
                            <bean parent="Uif-InputField" p:propertyName="subCode">
                                <property name="control">
                                    <bean parent="Uif-HiddenControl"/>
                                </property>
                            </bean>
                            <bean parent="Uif-InputField" p:propertyName="startDate"
                                  p:label="Start Date"
                                  p:instructionalText="Start date of the Transaction Type"
                                  p:fieldLabel.renderColon="true"
                                  p:labelPlacement="TOP"
                                  p:maxLength="10"
                                  p:required="true" p:onChangeScript="if(!@{newTransactionType}) { showLightboxComponent('startDateAuditLightbox');}">
                                <property name="bindingInfo.bindToForm" value="true"/>
                                <property name="control">
                                    <bean parent="Uif-DateControl" p:size="11"/>
                                </property>
                            </bean>
                            <bean parent="Uif-LinkField" p:href="javascript:void(0)" p:onClickScript="showLightboxComponent('startDateAuditLightbox');" p:linkText="Reason for change of Start Date" />

                            <bean id="startDateAuditLightbox" parent="Uif-VerticalBoxSection">
                                <property name="hidden" value="true"/>
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-HeaderTwo" p:headerText="Transaction Type Update"/>
                                        <bean parent="Uif-Message" p:style="color: red;" p:messageText="Changes to the Start Date CANNOT make a transaction type overlap, this will not be allowed."/>
                                        <bean parent="Uif-Message" p:style="color: red;" p:messageText="However, a start date can be changed to an earliert date if"/>
                                        <bean parent="Uif-Message" p:style="color: red;" p:messageText="(a) a prior period does not exist or"/>
                                        <bean parent="Uif-Message" p:style="color: red;" p:messageText="(b) any conflicting period has been moved to allow this change."/>
                                        <bean parent="Uif-Message" p:style="color: red;" p:messageText="Any transactions that have already occurred will be rejected."/>

                                        <bean parent="Uif-InputField" p:label="Audit Log Entry" p:instructionalText="Please describe why the Start Date was modified"
                                              p:propertyName="startDateAuditReason" p:labelPlacement="TOP">
                                            <property name="control">
                                                <bean parent="Uif-TextAreaControl" p:rows="5" p:cols="40"/>
                                            </property>
                                        </bean>
                                        <bean parent="Uif-SecondaryActionButton-Small" p:actionLabel="Close"  p:preSubmitCall="jQuery.fancybox.close();"/>
                                    </list>
                                </property>
                            </bean>


                            <bean parent="Uif-CheckboxInputField">
                                <property name="propertyName" value="showEndDate"/>
                                <property name="label" value="Specify an End Date"/>
                                <property name="defaultValue" value="false"/>
                            </bean>
                            <bean parent="Uif-InputField" p:propertyName="endDate"
                                  p:label="End Date"
                                  p:instructionalText="Must be a date in the future"
                                  p:fieldLabel.renderColon="true"
                                  p:labelPlacement="TOP"
                                  p:maxLength="10"
                                  p:required="true"
                                  p:progressiveRender="@{showEndDate}">
                                <property name="bindingInfo.bindToForm" value="true"/>
                                <property name="control">
                                    <bean parent="Uif-DateControl" p:size="11"/>
                                </property>
                            </bean>
                            <bean parent="Uif-InputField" p:label="Default Statement Text"
                                  p:propertyName="description" p:labelPlacement="TOP">
                                <property name="control">
                                    <bean parent="Uif-TextAreaControl" p:rows="5" p:cols="40"/>
                                </property>
                            </bean>
                            <bean parent="Uif-InputField" p:propertyName="priority" p:label="Priority"/>
                            <bean parent="Uif-InputField" p:propertyName="rollupId" p:labelPlacement="TOP" p:label="Transaction Type Roll-Up"
                                  p:fieldLabel.renderColon="false">
                                <property name="control">
                                    <bean parent="Uif-DropdownControl" p:width="100%"/>
                                </property>
                                <property name="optionsFinder" value="@{getRollupOptionsFinder()}"/>
                            </bean>

                        </list>
                    </property>
                </bean>
                <bean parent="Uif-VerticalBoxSection">
                    <property name="items">
                        <list>
                            <!--
                            <bean parent="Uif-InputField" p:propertyName="cancellationRule" p:label="Cancellation Rule" p:progressiveRender="@{#dp.type eq 'D'}">
                                <property name="control">
                                    <bean parent="Uif-TextControl" p:size="40" p:maxLength="100"/>
                                </property>
                            </bean>
                            -->
                            <bean parent="Uif-InputField" p:propertyName="clearPeriod" p:label="Default Clearing Period" p:progressiveRender="@{#dp.type eq 'C'}">
                                <property name="control">
                                    <bean parent="Uif-TextControl" p:size="40" p:maxLength="100"/>
                                </property>
                            </bean>
                            <bean parent="Uif-InputField" p:propertyName="refundable" p:progressiveRender="@{#dp.type eq 'C'}">
                                <property name="control">
                                    <bean parent="Uif-CheckboxControl"  p:checkboxLabel="Is Refundable"/>
                                </property>
                            </bean>
                            <bean parent="Uif-InputField" p:propertyName="refundRule" p:label="Refund Rule" p:progressiveRender="@{#dp.type eq 'C'}">
                                <property name="control">
                                    <bean parent="Uif-TextControl" p:size="40" p:maxLength="100"/>
                                </property>
                            </bean>
                            <bean parent="Uif-InputField" p:propertyName="authorizationText" p:label="Authorization Text/Label" p:progressiveRender="@{#dp.type eq 'C'}">
                                <property name="control">
                                    <bean parent="Uif-TextControl" p:size="40" p:maxLength="100"/>
                                </property>
                            </bean>
                            <bean parent="Uif-InputField" p:label="Unallocated GL Operation (default credit)" p:propertyName="unallocatedGLOperation" p:progressiveRender="@{#dp.type eq 'C'}">
                                <property name="control">
                                    <bean parent="Uif-DropdownControl" p:options-ref="TransactionTypeListShort"/>
                                </property>

                            </bean>
                            <bean parent="Uif-InputField" p:propertyName="unallocatedGLAccount" p:label="Unallocated GL Account" p:progressiveRender="@{#dp.type eq 'C'}">
