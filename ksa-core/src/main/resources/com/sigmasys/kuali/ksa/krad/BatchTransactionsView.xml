<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/util
    http://www.springframework.org/schema/util/spring-util-3.0.xsd">

    <bean id="BatchTransactionsView" parent="Uif-KsaFormView" p:footer.render="false">
        <property name="title" value="Batch Transactions"/>
        <property name="headerText" value="Batch Transactions"/>
        <property name="entryPageId" value="BatchTransactionsUploadFilePage"/>
        <property name="navigation" ref="KsaBatchNavigation"/>
        <property name="items">
            <list merge="true">
                <bean parent="Uif-Page" p:id="BatchTransactionsQuickMenuOptionsPage" p:title="Quick Options">
                    <property name="headerText" value="Quick Options"/>
                    <property name="items">
                        <list>
                            <ref bean="batchTransactionsQuickOptions"/>
                        </list>
                    </property>
                </bean>
                <bean parent="Uif-Page" p:id="BatchTransactionsUploadFilePage" p:title="File Upload">
                    <property name="headerText" value="File Upload"/>
                    <property name="items">
                        <list>
                            <ref bean="batchTransactionsUploadFile"/>
                        </list>
                    </property>
                </bean>
                <bean parent="Uif-Page" p:id="AgeTransactionsView" p:title="Age All Transactions">
                    <property name="headerText" value="Age all transactions"/>
                    <property name="items">
                        <list>
                            <ref bean="ageTransactionsUploadFile"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
<!--



        <property name="additionalCssFiles" ref=""/>
        <property name="additionalJsFiles" ref=""/>
        <property name="viewHelperServiceClassName" value=""/>
        <property name="defaultBindingObjectPath" vaue=""/>
-->
        <property name="formClass" value="com.sigmasys.kuali.ksa.krad.form.FileUploadForm"/>
    </bean>


    <!--
    ********************************************************************************************************************
                                          Quick Options section
    This is the list of options like an extra navigation page
    ********************************************************************************************************************
    -->
    <bean id="batchTransactionsQuickOptions" parent="Uif-VerticalBoxSection"
          p:layoutManager.orientation="VERTICAL"
          p:title="Batch Transaction Tasks"
          p:instructionalText="Select a quick navigation link from the options listed here.">
        <property name="disclosure.render" value="false"/>
        <property name="items">
            <list>
                <bean parent="Uif-LinkField" p:linkText="XML Batch Process" p:target="_self"
                      p:href="batchTransactionsView?methodToCall=get&amp;viewId=BatchTransactionsView&amp;pageId=BatchTransactionsUploadFilePage"/>
            </list>
        </property>
    </bean>

    <!--
    ********************************************************************************************************************
                                         Upload XML file section
    This is the upload task page
    ********************************************************************************************************************
    -->
    <bean id="batchTransactionsUploadFile" parent="Uif-VerticalBoxSection"
          p:layoutManager.orientation="VERTICAL">
        <!--p:title="Upload a file for processing">-->
        <property name="disclosure.render" value="false"/>
        <property name="items">
            <list>
                <bean parent="Uif-InputField" p:propertyName="uploadFile" p:label="@{getLValue('ksa.label.upload.xml.file')}">
                    <property name="instructionalText" value="Select an XML file to Upload and Process. The file will be validated during the process task."/>
					<property name="propertyEditor">
						<bean class="com.sigmasys.kuali.ksa.krad.util.MultipartFilePropertyEditor"/>
					</property>
                    <property name="control">
                        <bean parent="Uif-FileControl" p:size="30"/>
                    </property>
                </bean>
                <bean parent="Uif-HorizontalBoxSection"
                      p:layoutManager.orientation="VERTICAL">
                    <property name="disclosure.render" value="false"/>
                    <property name="items">
                        <list>
                            <bean parent="Uif-SecondaryActionButton-Small" p:methodToCall="uploadFile"
                                  p:actionLabel="@{getLValue('ksa.label.upload.file')}">
                                <!--<property name="actionImage">
                                    <bean parent="Uif-ImageField"
                                          p:source="@{#ConfigProperties['krad.externalizable.images.url']}ks/icon_btn_add.png"/>
                                </property>-->
                            </bean>
                            <!--  Status message -->
                            <bean parent="Uif-MessageField" p:messageText="@{message}"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="ageTransactionsUploadFile" parent="Uif-VerticalBoxSection"
          p:layoutManager.orientation="VERTICAL">
        <!--p:title="Upload a file for processing">-->
        <property name="disclosure.render" value="false"/>
        <property name="items">
            <list>
                <bean parent="Uif-SecondaryActionButton-Small" p:methodToCall="ageDebts"
                      p:actionLabel="Age All Accounts">
                </bean>
            </list>
        </property>
    </bean>

</beans>