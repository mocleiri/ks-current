            <bean parent="Uif-GridLayoutBase" p:numberOfColumns="4"/>
        </property>
        <property name="disclosure.render" value="false"/>
        <property name="readOnly" value="true"/>
        <property name="items">
            <list>
                <bean parent="Uif-InputField" p:propertyName="memoModel.id"
                      p:label="ID"
                      p:labelPlacement="LEFT"
                      p:maxLength="21"
                      p:fieldLabel.renderColon="true">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="22" />
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="memoModel.editorId"
                      p:label="Editor ID"
                      p:labelPlacement="LEFT"
                      p:maxLength="21"
                      p:fieldLabel.renderColon="true">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="22" />
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="memoModel.creatorId"
                      p:label="Creator ID"
                      p:labelPlacement="LEFT"
                      p:maxLength="21"
                      p:fieldLabel.renderColon="true">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="22" />
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="memoModel.lastUpdate"
                      p:label="Last Updated"
                      p:labelPlacement="LEFT"
                      p:maxLength="10"
                      p:fieldLabel.renderColon="true">
                    <property name="control">
                        <bean parent="Uif-DateControl" p:size="11" />
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="memoModel.creationDate"
                      p:label="Creation Date"
                      p:labelPlacement="LEFT"
                      p:maxLength="10"
                      p:fieldLabel.renderColon="true">
                    <property name="control">
                        <bean parent="Uif-DateControl" p:size="11" />
                    </property>
                </bean>
<!--
                <bean parent="Uif-InputField" p:propertyName="memoModel.account.id"
                      p:label="Account ID"
                      p:labelPlacement="LEFT"
                      p:maxLength="21"
                      p:fieldLabel.renderColon="true">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="22" />
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="memoModel.transaction.id"
                      p:label="Transaction ID"
                      p:labelPlacement="LEFT"
                      p:maxLength="21"
                      p:fieldLabel.renderColon="true">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="22" />
                    </property>
                </bean>
-->

                <!-- Activity Name -->
<!--                <bean parent="Uif-InputField" p:propertyName="memoModel.activity.id"
                      p:label="Activity Name"
                      p:labelPlacement="LEFT"
                      p:maxLength="21"
                      p:fieldLabel.renderColon="true">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="22" />
                    </property>
                </bean>-->
                <bean parent="Uif-InputField" p:propertyName="memoModel.effectiveDate"
                      p:label="Effective Date"
                      p:labelPlacement="LEFT"
                      p:maxLength="10"
                      p:fieldLabel.renderColon="true">
                    <property name="control">
                        <bean parent="Uif-DateControl" p:size="11" />
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="memoModel.expirationDate"
                      p:label="Expiration Date"
                      p:labelPlacement="LEFT"
                      p:maxLength="10"
                      p:fieldLabel.renderColon="true">
                    <property name="control">
                        <bean parent="Uif-DateControl" p:size="11" />
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="memoModel.accessLevel.code"
                      p:label="Level"
                      p:maxLength="2"
                      p:labelPlacement="LEFT"
                      p:fieldLabel.renderColon="true">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="3"/>
                    </property>
                </bean>
                <!-- TODO need the ID for these two -->
                <bean parent="Uif-InputField" p:propertyName="memoModel.previousMemo"
                      p:label="Previous Memo ID"
                      p:labelPlacement="LEFT"
                      p:maxLength="21"
                      p:fieldLabel.renderColon="true">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="22" />
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="memoModel.nextMemo"
