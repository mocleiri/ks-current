                                    <bean parent="Uif-KeyLabelPair" p:key="2" p:value="2"/>
                                    <bean parent="Uif-KeyLabelPair" p:key="3" p:value="3"/>
                                    <bean parent="Uif-KeyLabelPair" p:key="4" p:value="4"/>
                                </list>
                            </property>
                        </bean>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="memoModel.previousMemo"
                      p:label="Previous Memo"
                      p:labelPlacement="TOP"
                      p:readOnly="true">
                    <property name="bindingInfo.bindToForm" value="true"/>
                    <property name="control">
                        <bean parent="Uif-TextAreaControl" p:rows="5" p:cols="40"
                              p:style="resize:none;"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="memoModel.text"
                      p:label="Memo"
                      p:labelPlacement="TOP">
                    <property name="bindingInfo.bindToForm" value="true"/>
                    <property name="control">
                        <bean parent="Uif-TextAreaControl" p:rows="5" p:cols="40"
                              p:style="resize:none;"/>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

</beans>