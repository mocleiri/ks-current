<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="RatesView" parent="Uif-KsaFormView" p:footer.render="false">
        <property name="title" value="Rates"/>
        <property name="headerText" value="Fee Management"/>
        <property name="entryPageId" value="RatesPage"/>
        <property name="formClass" value="com.sigmasys.kuali.ksa.krad.form.RatesForm"/>
        <property name="viewHelperServiceClass" value="com.sigmasys.kuali.ksa.krad.helper.RateRolloverHelper"/>
        <property name="navigation" ref="KsaFeeManagementNavigation"/>
        <property name="items">
            <list merge="true">
                <bean parent="Uif-Page" p:id="RatesPage" p:title="Rates">
                    <property name="headerText" value="Rates"/>
                    <property name="items">
                        <list>
                            <ref bean="rateFilterSection"/>
                            <ref bean="rateTable"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="rateFilterSection" parent="Uif-VerticalBoxSection">
        <property name="items">
            <list>
                <bean parent="Uif-InputField" p:propertyName="academicTimePeriod"
                      p:label="Academic Time Period" p:fieldLabel.renderColon="false" p:labelPlacement="TOP"
                      p:maxLength="20" p:required="true">
                    <property name="suggest">
                        <bean parent="Uif-Suggest">
                            <property name="valuePropertyName" value="atpName"/>
                            <property name="labelPropertyName" value="atpName"/>
                            <property name="templateOptions">
                                <map>
                                    <entry key="minLength" value="2"/>
                                    <entry key="delay" value="0"/>
                                </map>
                            </property>
                            <property name="suggestQuery">
                                <bean parent="Uif-AttributeQueryConfig">
                                    <property name="queryMethodToCall" value="searchForAtps"/>
                                </bean>
                            </property>
                        </bean>
                    </property>

                </bean>
                <bean parent="Uif-InputField" p:propertyName="rateCatalogCode"
                      p:label="Rate Catalog Code" p:fieldLabel.renderColon="false" p:labelPlacement="TOP">
                    <!--<property name="suggest">
                        <bean parent="Uif-Suggest">
                            <property name="valuePropertyName" value="id.id"/>
                            <property name="labelPropertyName" value="description"/>
                            <property name="templateOptions">
                                <map>
                                    <entry key="minLength" value="2"/>
                                    <entry key="delay" value="0"/>
                                </map>
                            </property>
                            <property name="suggestQuery">
                                <bean parent="Uif-AttributeQueryConfig">
                                    <property name="queryMethodToCall" value="getTransactionTypesForSuggest"/>
                                </bean>
                            </property>
                        </bean>
                    </property>
                    -->
                </bean>
                <bean parent="Uif-InputField" p:propertyName="rateCode"
                      p:label="Rate Code" p:fieldLabel.renderColon="false" p:labelPlacement="TOP">
                    <!--<property name="suggest">
                        <bean parent="Uif-Suggest">
                            <property name="valuePropertyName" value="id.id"/>
                            <property name="labelPropertyName" value="description"/>
                            <property name="templateOptions">
                                <map>
                                    <entry key="minLength" value="2"/>
                                    <entry key="delay" value="0"/>
                                </map>
                            </property>
                            <property name="suggestQuery">
                                <bean parent="Uif-AttributeQueryConfig">
                                    <property name="queryMethodToCall" value="getTransactionTypesForSuggest"/>
                                </bean>
                            </property>
                        </bean>
                    </property>
                    -->
                </bean>
                <bean parent="Uif-InputField" p:propertyName="rateSubcode"
                      p:label="Rate Subcode" p:fieldLabel.renderColon="false" p:labelPlacement="TOP">
                    <!--<property name="suggest">
                        <bean parent="Uif-Suggest">
                            <property name="valuePropertyName" value="id.id"/>
                            <property name="labelPropertyName" value="description"/>
                            <property name="templateOptions">
                                <map>
                                    <entry key="minLength" value="2"/>
                                    <entry key="delay" value="0"/>
                                </map>
                            </property>
                            <property name="suggestQuery">
                                <bean parent="Uif-AttributeQueryConfig">
                                    <property name="queryMethodToCall" value="getTransactionTypesForSuggest"/>
                                </bean>
                            </property>
                        </bean>
                    </property>
                    -->
                </bean>
                <bean parent="Uif-SecondaryActionButton-Small" p:methodToCall="getRates" p:actionLabel="Get Rates"/>

            </list>
        </property>
    </bean>

    <bean id="rateTable" parent="Uif-VerticalBoxSection">
        <property name="items">
            <list>
                <bean parent="Uif-Message" p:messageText="Please select rate criteria."
                      p:render="@{rates.size() == 0}"/>
                <bean parent="Uif-TableCollectionSection" p:layoutManager.numberOfColumns="4" p:width="85%">
                    <property name="readOnly" value="false"/>
                    <property name="collectionObjectClass" value="com.sigmasys.kuali.ksa.krad.model.RateModel"/>
                    <property name="propertyName" value="rates"/>
                    <property name="layoutManager.richTable.render" value="true"/>
                    <property name="layoutManager.renderSequenceField" value="false"/>
                    <property name="renderAddBlankLineButton" value="false"/>
                    <property name="renderAddLine" value="false"/>
                    <property name="renderLineActions" value="false"/>
                    <property name="layoutManager.richTable.templateOptions">
                        <map merge="true">
                            <entry key="bPaginate" value="true"/>
                            <entry key="bInfo" value="false"/>
                            <entry key="bFilter" value="false"/>
                        </map>
                    </property>

                    <property name="items">
                        <list>
                            <bean parent="Uif-InputField" p:label="Code" p:propertyName="rate.code"
                                  p:readOnly="@{#line.rate.id != null}">
                                <property name="control">
                                    <bean parent="Uif-TextControl"/>
                                </property>
                            </bean>
                            <bean parent="Uif-InputField" p:label="Name" p:propertyName="rate.name">
                                <property name="control">
                                    <bean parent="Uif-TextControl"/>
                                </property>
                            </bean>
                            <bean parent="Uif-InputField" p:label="Description" p:propertyName="rate.description">
                                <property name="control">
                                    <bean parent="Uif-TextControl" p:textExpand="true"/>
                                </property>
                            </bean>
                            <bean parent="Uif-HorizontalFieldGroup" p:label="Actions" p:readOnly="true" p:style="white-space: nowrap;">
                                <property name="items">
                                    <list>
                                        <!-- "Save" image action -->
                                        <bean parent="Uif-ActionLink" p:methodToCall="saveRate"
                                              p:onClickScript="writeHiddenToForm('rateId', '@{#line.rate.id}');">
                                            <property name="toolTip">
                                                <bean parent="Uif-Tooltip">
                                                    <property name="tooltipContent" value="Save Rate"/>
                                                </bean>
                                            </property>
                                            <property name="actionImage">
                                                <bean parent="Uif-Image" p:source="../images/save.png"
                                                      p:style="cursor:pointer;" p:altText="Save"/>
                                            </property>
                                        </bean>

                                        <!-- "Audit Guy" icon with a tooltip -->
                                        <!--
                                        <bean parent="Uif-Image" p:source="../images/audit_guy.png" p:style="cursor:pointer;" p:altText="Account Info" p:hidden="@{#line.id == null}">
                                            <property name="toolTip">
                                                <bean parent="Uif-Tooltip">
                                                    <property name="tooltipContent" value="@{#line.auditingInfo}"/>
                                                </bean>
                                            </property>
                                        </bean>
                                        -->
                                        <bean parent="Uif-ImageField" p:source="../images/roll-over.png"
                                              p:style="cursor:pointer; float: right;" p:altText="" p:title=""
                                              p:render="@{#line.rate.id != null}"
                                              p:onClickScript="showLightboxComponent('rolloverRateLightbox@{#lineSuffix}');writeHiddenToForm('rateId', '@{#line.rate.id}');">
                                            <property name="toolTip">
                                                <bean parent="Uif-Tooltip">
                                                    <property name="tooltipContent" value="Rollover Rate"/>
                                                </bean>
                                            </property>
                                        </bean>
                                        <ref bean="rolloverRateLightbox"/>
                                        <bean parent="Uif-ActionLink" p:methodToCall="deleteRate"
                                              p:onClickScript="writeHiddenToForm('rateId', '@{#line.rate.id}');"
                                              p:hidden="@{#line.rate.id == null}">
                                            <property name="toolTip">
                                                <bean parent="Uif-Tooltip">
                                                    <property name="tooltipContent" value="Delete Rate"/>
                                                </bean>
                                            </property>
                                            <property name="actionImage">
                                                <bean parent="Uif-Image" p:source="../images/delete.png"
                                                      p:style="cursor:pointer;" p:altText="Delete"/>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>

                        </list>
                    </property>
                    <property name="layoutManager.rowDetailsGroup">
                        <bean parent="Uif-VerticalBoxGroup">
                            <property name="items">
                                <list>
                                    <bean parent="Uif-InputField" p:propertyName="atpDescription" p:labelPlacement="TOP"
                                          p:label="Academic Time Period" p:readOnly="true"/>
                                    <bean parent="Uif-InputField" p:propertyName="defaultAmount" p:labelPlacement="TOP"
                                          p:label="Default Amount" p:readOnly="@{#line.getDefaultAmountReadOnly()}"/>
                                    <bean parent="Uif-InputField" p:propertyName="transactionTypeId"
                                          p:labelPlacement="TOP" p:label="Transaction Type Code"
                                          p:readOnly="@{#line.getTransactionTypeIdReadOnly()}"/>
                                    <bean parent="Uif-HorizontalBoxSection">
                                        <property name="items">
                                            <list>
                                                <ref bean="flexibleRateAmounts"/>
                                                <ref bean="effectiveDateParameters"/>
                                                <ref bean="rateLimitParameters"/>
                                            </list>
                                        </property>
                                    </bean>

                                </list>
                            </property>
                        </bean>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="rolloverRateLightbox" parent="Uif-VerticalBoxSection" p:readOnly="false"
          p:layoutManager.orientation="VERTICAL">
        <property name="headerText" value="Rollover Rate"/>
        <!--<property name="retrieveViaAjax" value="true"/>-->
        <property name="hidden" value="true"/>
        <property name="items">
            <list>
                <bean parent="Uif-InputField" p:label="New Academic Time Period"
                      p:propertyName="rolloverAcademicPeriod"/>
                <bean parent="Uif-InputField" p:label="Transaction Date Type"
                      p:propertyName="rolloverTransactionDateType">
                    <property name="control">
                        <bean parent="Uif-DropdownControl" p:width="100%"/>
                    </property>
                    <property name="optionsFinder" value="@{getTransactionDateTypeFinder()}"/>
                </bean>

                <bean parent="Uif-InputField" p:label="Transaction Date" p:propertyName="rolloverTransactionDate"
                      p:constraintText="Format: mm/dd/yyyy">
                    <property name="control">
                        <bean parent="Uif-DateControl" p:size="11" p:maxLength="20"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:label="Recognition Date" p:propertyName="rolloverRecognitionDate"
                      p:constraintText="Format: mm/dd/yyyy">
                    <property name="control">
                        <bean parent="Uif-DateControl" p:size="11" p:maxLength="20"/>
                    </property>
                </bean>
                <bean parent="Uif-SecondaryActionButton-Small" p:methodToCall="rolloverRate" p:actionLabel="Save"
                      p:preSubmitCall="writeHiddenToForm('rateId', '@{#line.rate.id}'); jQuery.fancybox.close();return true;"/>
            </list>
        </property>
    </bean>

    <bean id="flexibleRateAmounts" parent="Uif-Disclosure-VerticalBoxSection" p:style="width: 80%;">
        <property name="headerText" value="Flexible Rate Amounts"/>
        <property name="readOnly" value="false"/>
        <property name="render" value="@{#line.getFlexible()}"/>

        <property name="items">
            <list>
                <bean parent="Uif-TableCollectionSection" p:layoutManager.numberOfColumns="4">
                    <property name="readOnly" value="false"/>
                    <property name="collectionObjectClass" value="com.sigmasys.kuali.ksa.model.fm.RateAmount"/>
                    <property name="propertyName" value="rateAmounts"/>
                    <property name="layoutManager.sequencePropertyName" value="id"/>
                    <property name="layoutManager.richTable.render" value="true"/>
                    <property name="layoutManager.renderSequenceField" value="false"/>
                    <property name="renderAddBlankLineButton" value="false"/>
                    <property name="renderAddLine" value="false"/>
                    <property name="layoutManager.richTable.disableTableSort" value="false"/>
                    <property name="layoutManager.richTable.templateOptions">
                        <map merge="true">
                            <entry key="bPaginate" value="false"/>
                            <entry key="bInfo" value="false"/>
                            <entry key="bFilter" value="false"/>
                            <entry key="bSort" value="false"/>
                        </map>
                    </property>
                    <property name="renderLineActions" value="false"/>
                    <property name="items">
                        <list>
                            <bean parent="Uif-InputField" p:label="Units" p:propertyName="units.value"/>
                            <bean parent="Uif-InputField" p:label="Amount" p:propertyName="amount"/>
                            <bean parent="Uif-InputField" p:label="Transaction Type Code"
                                  p:propertyName="transactionTypeId"/>
                        </list>
                    </property>

                </bean>

            </list>
        </property>
    </bean>

    <bean id="effectiveDateParameters" parent="Uif-Disclosure-VerticalBoxSection">
        <property name="headerText" value="Effective Date Parameters"/>
        <property name="readOnly" value="false"/>

        <property name="items">
            <list>
                <bean parent="Uif-InputField" p:label="Transaction Date Type" p:propertyName="transactionDateType">
                    <property name="control">
                        <bean parent="Uif-DropdownControl" p:width="100%"/>
                    </property>
                    <property name="optionsFinder" value="@{getTransactionDateTypeFinder()}"/>
                </bean>
                <bean parent="Uif-InputField" p:label="Transaction Date" p:propertyName="rate.transactionDate"
                      p:constraintText="Format: mm/dd/yyyy">
                    <property name="control">
                        <bean parent="Uif-DateControl" p:size="11" p:maxLength="20"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:label="Recognition Date" p:propertyName="rate.recognitionDate"
                      p:constraintText="Format: mm/dd/yyyy">
                    <property name="control">
                        <bean parent="Uif-DateControl" p:size="11" p:maxLength="20"/>
                    </property>
                </bean>

            </list>
        </property>
    </bean>

    <bean id="rateLimitParameters" parent="Uif-Disclosure-VerticalBoxSection">
        <property name="headerText" value="Rate Limit Parameters"/>
        <property name="readOnly" value="false"/>

        <property name="items">
            <list>
                <bean parent="Uif-InputField" p:label="Is this a limit rate?" p:propertyName="isLimitAmount">
                    <property name="control">
                        <bean parent="Uif-CheckboxControl"/>
                    </property>
                </bean>

                <bean parent="Uif-HorizontalBoxSection">
                    <property name="items">
                        <list>
                            <bean parent="Uif-Message" p:messageText="A limit of "/>
                            <bean parent="Uif-InputField" p:propertyName="rate.limitAmountValue">
                                <property name="control">
                                    <bean parent="Uif-TextControl" p:size="6"/>
                                </property>
                            </bean>
                            <bean parent="Uif-Message" p:messageText="will apply between"/>
                            <bean parent="Uif-InputField" p:propertyName="rate.minLimitUnits">
                                <property name="control">
                                    <bean parent="Uif-TextControl" p:size="6"/>
                                </property>
                            </bean>
                            <bean parent="Uif-Message" p:messageText="and"/>
                            <bean parent="Uif-InputField" p:propertyName="rate.maxLimitUnits">
                                <property name="control">
                                    <bean parent="Uif-TextControl" p:size="6"/>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>


</beans>