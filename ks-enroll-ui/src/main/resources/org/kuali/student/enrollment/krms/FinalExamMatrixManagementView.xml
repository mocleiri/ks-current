    <bean id="KSFE-FinalExamMatrixManagement-View" parent="KS-Uif-FormView" p:applyDirtyCheck="false">

        <property name="id" value="finalExamMatrixManagementView"/>
        <property name="entryPageId" value="finalExamSearchInputPage"/>
        <property name="viewHelperServiceClass" value="org.kuali.student.enrollment.class1.krms.service.impl.FERuleViewHelperServiceImpl"/>
        <property name="formClass" value="org.kuali.student.enrollment.class1.krms.dto.FERuleManagementWrapper"/>
        <property name="headerText" value="Manage Final Exam Matrix" />
        <property name="header.cssClasses">
            <list merge="true">
                <value>uif-viewHeader</value>
            </list>
        </property>

        <property name="viewSourceFile" value="FinalExamMatrixManagementView.xml" /> <!-- Shows up in HTML so devs can find the code -->

        <property name="authorizer">
            <bean class="org.kuali.student.enrollment.main.view.KsViewAuthorizerBase"/>
        </property>


        <property name="footer">
            <bean parent="Uif-FooterBase"/>
        </property>

        <property name="additionalScriptFiles">
            <list merge="true">
                <value>themes/ksboot/scripts/toolbar.js</value>
                <value>ks-krad/scripts/ks-krad-collection-rowSelection.js</value>
            </list>
        </property>
        <property name="additionalCssFiles">
            <list merge="true">
                <value>themes/ksboot/stylesheets/calendar.css</value>
                <value>themes/ksboot/stylesheets/krms.css</value>
            </list>
        </property>

        <property name="breadcrumbOptions.homewardPathBreadcrumbs">
            <list>
                <ref bean="KS-HomewardPathBreadcrumbs-Home"/>
                <ref bean="KS-HomewardPathBreadcrumbs-Enrollment"/>
            </list>
        </property>


        <property name="breadcrumbOptions.breadcrumbOverrides">
            <list>
                <bean id="KSFE-HomewardPathBreadcrumbs-this-Landing" parent="Uif-BreadcrumbItem">
                    <property name="label" value="Manage Final Exam Matrix"/>
                </bean>
            </list>
        </property>

        <property name="items">
            <list>
                <ref bean="KSFE-FinalExamMatrixManagement-SearchInputPage"/>
            </list>
        </property>
        <property name="dialogs">
            <list>

            </list>
        </property>
    </bean>

    <bean id="KSFE-HomewardPathBreadcrumbs-ManageFEM-Landing" parent="Uif-BreadcrumbItem">
        <property name="label" value="Manage Final Exam Matrix"/>
        <property name="url.viewId" value="finalExamMatrixManagementView"/>
        <property name="url.controllerMapping" value="finalExamMatrixManagement"/>
        <property name="url.requestParameters">
            <map key-type="java.lang.String" merge="true">
                <entry key="methodToCall" value="start"/>
                <entry key="dataObjectClassName" value="org.kuali.student.enrollment.class1.krms.dto.FERuleManagementWrapper"/>
                <entry key="hideReturnLink" value="true"/>
                <entry key="pageId" value="finalExamSearchInputPage"/>
                <entry key="viewName" value="Manage Final Exam Matrix"/>
                <entry key="hideReturnLink" value="true"/>
                <entry key="formKey" value="@{returnFormKey}"/>
            </map>
        </property>
    </bean>

    <bean id="KSFE-FinalExamMatrixManagement-SearchInputPage" parent="KS-Uif-Page" p:disclosure.render="false"
          p:id="finalExamSearchInputPage">
        <property name="breadcrumbOptions.breadcrumbOverrides">
            <list>
                <ref bean="KSFE-HomewardPathBreadcrumbs-ManageFEM-Landing" />
            </list>
        </property>

        <property name="items">
            <list>
                <bean parent="Uif-HorizontalBoxSection">
                    <property name="items">
                        <list>
                            <ref bean="KSFE-FinalExamMatrixManagement-CriteriaSection"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>


    <bean id="KSFE-FinalExamMatrixManagement-CriteriaSection" parent="Uif-HorizontalBoxSection"
          p:id="finalExamMatrixManagementCriteriaSection">
        <property name="disclosure.render" value="false"/>
        <property name="items">
            <list>
                <bean parent="Uif-HorizontalBoxSection">
                    <property name="items">
                        <list>

                            <bean parent="Uif-InputField" p:propertyName="type.key" p:label="Term" p:labelPlacement="LEFT" p:required="true" p:readOnly="false">
                                <property name="control">
                                    <bean parent="Uif-DropdownControl"/>
                                </property>
                                <property name="optionsFinder">
                                    <bean class="org.kuali.student.enrollment.class1.krms.keyvalue.TermKeyValueFinder"/>
                                </property>
                            </bean>
                            <bean parent="KS-Uif-PrimaryActionButton" p:performClientSideValidation="true" p:actionLabel="Show" p:methodToCall="show"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

</beans>