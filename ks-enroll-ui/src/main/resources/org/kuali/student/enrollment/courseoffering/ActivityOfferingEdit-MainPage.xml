    <bean id="ActivityOfferingEdit-MainPage" parent="Uif-Page" p:id="ActivityOfferingEdit-MainPage">
        <property name="items">
            <list>
                <bean parent="Uif-HeaderFour" p:headerText="@{document.newMaintainableObject.dataObject.courseOfferingCode} - @{document.newMaintainableObject.dataObject.courseOfferingTitle} (@{document.newMaintainableObject.dataObject.credits} Credits)"/>
                <bean parent="Uif-HeaderThree" p:headerText="Edit @{document.newMaintainableObject.dataObject.activityCode} (@{document.newMaintainableObject.dataObject.abbreviatedCourseType})"/>

                <ref bean="ActivityOfferingEdit-MainPage-section1"/>
                <ref bean="ActivityOfferingEdit-MainPage-section2"/>

                <ref bean="ActivityOffering-DeliveryLogistic-Actuals"/>
                <ref bean="ActivityOffering-DeliveryLogistic-New"/>
                <ref bean="ActivityOffering-DeliveryLogistic-Requested"/>

                <ref bean="ActivityOfferingEdit-MainPage-PersonnelSection"/>
                <ref bean="ActivityOfferingEdit-MainPage-SeatPool"/>
                <ref bean="ActivityOfferingEdit-MainPage-Miscellaneous"/>
            </list>
        </property>
        <property name="footer">
          <bean parent="Uif-FooterBase"/>
        </property>
        <property name="footer.items">
            <ref bean="KSDocumentPageFooter_SubmitCancel" />
        </property>
    </bean>

    <bean id="ActivityOfferingEdit-MainPage-section1" parent="Uif-VerticalBoxSection">
        <property name="items">
            <list>
                <bean parent="Uif-DataField" p:label="Status" p:propertyName="stateName"/>
                <bean parent="Uif-DataField" p:label="Term" p:propertyName="termDisplayString" p:readOnly="true" />

                <bean parent="Uif-HorizontalBoxSection">
                    <property name="items">
                        <list>
                            <!-- <bean parent="Uif-DataField" p:label="Activity Type" p:propertyName="aoInfo.typeKey" p:readOnly="true"/> -->
                            <bean parent="Uif-DataField" p:label="Activity Type" p:propertyName="typeName" p:readOnly="true"/>
                            <bean parent="Uif-DataField" p:label="Format" p:propertyName="aoInfo.formatOfferingName" p:readOnly="true"/>
                            <!-- <bean parent="Uif-DataField" p:label="Format" p:propertyName="aoInfo.formatOfferingName" p:readOnly="true" p:defaultValue="Lecture"/> -->
                        </list>
                    </property>
                </bean>

                <ref bean="KSDocumentPageFooter_SubmitCancel"/>

            </list>
        </property>
    </bean>

    <bean id="ActivityOfferingEdit-MainPage-section2" parent="Uif-VerticalBoxSection" p:onDocumentReadyScript="calculatePercent()">
        <property name="headerText" value="Activity Offering Information"/>
        <property name="items">
            <list>
                <bean parent="Uif-InputField" p:label="Activity Code " p:fieldLabel.renderColon="false" p:propertyName="aoInfo.activityCode">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="1"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:label="Total Maximum Enrollment" p:fieldLabel.renderColon="false" p:propertyName="aoInfo.maximumEnrollment"
                      p:id="maximumEnrollment" p:onChangeScript="calculatePercent(jQuery(this))">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="3"/>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="ActivityOfferingEdit-MainPage-PersonnelSection" parent="Uif-VerticalBoxSection">
        <property name="headerText" value="Personnel"/>
        <property name="items">
            <list>
                <bean id="ActivityOffering-PersonnelSection" parent="Uif-TableCollectionSection"
                      p:layoutManager.numberOfColumns="6"
                      p:id="ao-personnelgroup"
                      p:layoutManager.style="width: 100%; display:block;">
                    <property name="headerText" value="Affiliated Personnel" />
                    <!-- <property name="header">
                        <bean parent="Uif-HeaderFour"/>
                    </property> -->
                    <property name="collectionObjectClass" value="org.kuali.student.enrollment.class2.courseoffering.dto.OfferingInstructorWrapper" />
                    <property name="propertyName" value="instructors" />
                    <property name="layoutManager.renderSequenceField" value="false" />
                    <property name="layoutManager.separateAddLine" value="false" />
                    <property name="layoutManager.richTable.render" value="false" />
                    <property name="layoutManager.applyDefaultCellWidths" value="false" />
                    <property name="layoutManager.applyAlternatingRowStyles" value="false" />
                    <property name="addLineItems">
                        <list>
                            <bean parent="Uif-InputField" p:propertyName="offeringInstructorInfo.personId" p:label="ID" p:required="true" p:cssClasses="col_5">
                                <property name="quickfinder.dataObjectClassName" value="org.kuali.rice.kim.api.identity.Person"/>
                                <property name="quickfinder.fieldConversions">
                                    <map>
                                        <entry key="name" value="offeringInstructorInfo.personName"/>
                                        <entry key="principalId" value="offeringInstructorInfo.personId"/>
                                    </map>
                                </property>
                                <property name="quickfinder.viewName" value="ks_simplePersonLookup" />
                            </bean>
                            <bean parent="Uif-DataField" p:propertyName="offeringInstructorInfo.personName" p:label="Name" p:readOnly="true"/>
                            <bean parent="Uif-InputField" p:propertyName="offeringInstructorInfo.typeKey" p:label="AFFILIATION">
                                <property name="control">
                                    <bean parent="Uif-DropdownControl" p:options-ref="aoInstructors-options" />
                                </property>
                            </bean>
                            <bean parent="Uif-InputField" p:propertyName="sEffort" p:label="INST.EFFORT" p:required="true" p:exclusiveMin="0" p:inclusiveMax="100">
                                <property name="control">
                                    <bean parent="Uif-TextControl" p:size="10" />
                                </property>
                            </bean>
                        </list>
                    </property>
                    <property name="items">
                        <list>
                            <bean parent="Uif-DataField" p:propertyName="offeringInstructorInfo.personId" p:label="ID" p:readOnly="true"/>
                            <bean parent="Uif-DataField" p:propertyName="offeringInstructorInfo.personName" p:label="Name" p:readOnly="true"/>
                            <bean parent="Uif-InputField" p:propertyName="offeringInstructorInfo.typeKey" p:label="AFFILIATION" p:readOnly="true">
                                <property name="control">
                                    <bean parent="Uif-DropdownControl" p:options-ref="aoInstructors-options" />
                                </property>
                            </bean>
                            <bean parent="Uif-InputField" p:propertyName="sEffort" p:label="INST.EFFORT" p:required="true" p:exclusiveMin="0" p:inclusiveMax="100">
                                <property name="control">
                                    <bean parent="Uif-TextControl" p:size="10" />
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="ActivityOfferingEdit-MainPage-SeatPool" parent="Uif-VerticalBoxSection">
         <property name="items">
            <list>
                <bean id="ActivityOffering-SeatpoolsSection" parent="Uif-TableCollectionSection"
                      p:layoutManager.numberOfColumns="6"
                      p:id="ao-seatpoolgroup"
                      p:layoutManager.style="width: 100%; display:block;">
                    <property name="headerText" value="Seat Pools"/>
                    <property name="collectionObjectClass" value="org.kuali.student.enrollment.class2.courseoffering.dto.SeatPoolWrapper" />
                    <property name="propertyName" value="seatpools" />
                    <property name="layoutManager.renderSequenceField" value="false" />
                    <property name="layoutManager.separateAddLine" value="false" />
                    <property name="layoutManager.richTable.render" value="false" />
                    <property name="layoutManager.applyDefaultCellWidths" value="false" />
                    <property name="layoutManager.applyAlternatingRowStyles" value="false" />
                    <property name="addLineActions">
                        <list>
                            <bean parent="Uif-PrimaryActionButton-Small" p:methodToCall="addLine" p:actionLabel="add"
                                  p:actionEvent="addLine" p:onDocumentReadyScript="calculatePercent()" />
                        </list>
                    </property>
                    <property name="lineActions">
                        <list>
                            <bean parent="Uif-PrimaryActionButton-Small" p:methodToCall="deleteLine" p:actionLabel="remove"
                                  p:actionEvent="deleteLine" p:onDocumentReadyScript="calculatePercent()" />
                        </list>
                    </property>

                    <property name="addLineItems">
                        <list>
                            <bean parent="Uif-InputField" p:propertyName="seatPool.processingPriority" p:label="PRIORITY" p:maxLength="2" p:required="true">
                                <property name="control">
                                    <bean parent="Uif-TextControl" p:size="2" />
                                </property>
                                <property name="validCharactersConstraint">
                                    <bean parent="IntegerPatternConstraint" />
                                </property>
                            </bean>
                            <bean parent="Uif-InputField" p:propertyName="seatPool.seatLimit" p:label="SEATS" p:maxLength="3" p:id="seatLimit" p:required="true">
                                <property name="control">
                                    <!--bean parent="Uif-TextControl" p:size="3" p:onKeyDownScript="calculatePercent(jq(this))"/-->
                                    <bean parent="Uif-TextControl" p:size="3" />
                                </property>
                                <property name="validCharactersConstraint">
                                    <bean parent="IntegerPatternConstraint" />
                                </property>
                            </bean>
                            <bean parent="Uif-MessageField" p:messageText="" p:label="PERCENT" p:readOnly="true" p:id="seatLimitPercent" />
                            <bean parent="Uif-InputField" p:label="POPULATION NAME" p:propertyName="seatPoolPopulation.name" p:required="true" p:cssClasses="col_6">
                                <property name="control">
                                    <bean parent="Uif-TextControl" p:size="40" p:ReadOnly="true" />
                                </property>
                                <property name="quickfinder.dataObjectClassName" value="org.kuali.student.enrollment.class2.population.dto.PopulationWrapper"/>
                                <property name="quickfinder.fieldConversions">
                                    <map>
                                        <entry key="populationInfo.id" value="seatPoolPopulation.id"/>
                                        <entry key="populationInfo.name" value="seatPoolPopulation.name"/>
                                    </map>
                                </property>
                                <!--<property name="quickfinder.readOnlySearchFields" value="populationInfo.stateKey" />-->
                            </bean>
                            <bean parent="Uif-InputField" p:propertyName="seatPool.expirationMilestoneTypeKey" p:defaultValue="kuali.atp.milestone.firstdayofclasses" p:label="EXPIRATION MILESTONE">
                                <!-- property name="control">
                                    <bean parent="Uif-DropdownControl"/>
                                </property>
                                <property name="optionsFinder">
                                    <bean class="org.kuali.student.enrollment.class2.courseoffering.keyvalue.ExpirationMilestoneKeyValues" p:addBlankOption="false" />
                                </property -->
                                <property name="control">
                                    <bean parent="Uif-DropdownControl" />
                                </property>
                                <property name="optionsFinder">
                                    <bean class="org.kuali.student.enrollment.class2.courseoffering.keyvalue.SeatPoolExpirationMilestoneTypeKeyValues" p:addBlankOption="false"/>
                                </property>
                            </bean>
                        </list>
                    </property>
                    <property name="items">
                        <list>
                            <bean parent="Uif-InputField" p:propertyName="seatPool.processingPriority" p:label="PRIORITY" p:maxLength="2" p:required="true">
                                <property name="control">
                                    <bean parent="Uif-TextControl" p:size="2" />
                                </property>
                            </bean>
                            <bean parent="Uif-InputField" p:propertyName="seatPool.seatLimit" p:label="SEATS" p:maxLength="3" p:id="seatLimit" p:required="true">
                                <property name="control">
                                    <bean parent="Uif-TextControl" p:size="3" p:onKeyUpScript="calculatePercent(jQuery(this))" />
                                </property>
                            </bean>
                            <bean parent="Uif-MessageField" p:messageText="%" p:label="PERCENT" p:readOnly="true" p:id="seatLimitPercent" />
                            <bean parent="Uif-DataField" p:label="POPULATION NAME" p:propertyName="seatPoolPopulation.name" p:required="true">
                                <!--<property name="control">
                                    <bean parent="Uif-TextControl" p:size="40" p:disabled="true" />
                                </property>
                                <property name="quickfinder.dataObjectClassName" value="org.kuali.student.enrollment.class2.population.dto.PopulationWrapper"/>
                                <property name="quickfinder.fieldConversions">
                                    <map>
                                        <entry key="populationInfo.id" value="seatPoolPopulation.id"/>
                                        <entry key="populationInfo.name" value="seatPoolPopulation.name"/>
                                    </map>
                                </property>-->
                                <!--<property name="quickfinder.readOnlySearchFields" value="populationInfo.stateKey" />-->
                            </bean>
                            <bean parent="Uif-InputField" p:propertyName="seatPool.expirationMilestoneTypeKey" p:label="EXPIRATION MILESTONE">
                                <!-- property name="control">
                                    <bean parent="Uif-DropdownControl"/>
                                </property>
                                <property name="optionsFinder">
                                    <bean class="org.kuali.student.enrollment.class2.courseoffering.keyvalue.ExpirationMilestoneKeyValues" p:addBlankOption="false" />
                                </property -->
                                <property name="control">
                                    <bean parent="Uif-DropdownControl" />
                                </property>
                                <property name="optionsFinder">
                                    <bean class="org.kuali.student.enrollment.class2.courseoffering.keyvalue.SeatPoolExpirationMilestoneTypeKeyValues" p:addBlankOption="false"/>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
                <bean parent="Uif-MessageField" p:label="Seat Pools" p:messageText="0" p:id="seatpoolCount" />
                <bean parent="Uif-MessageField" p:label="Seats Remaining" p:messageText="N/A" p:id="seatsRemaining" />
            </list>
        </property>
    </bean>

    <bean id="ActivityOfferingEdit-MainPage-Miscellaneous" parent="Uif-VerticalBoxSection" p:headerText="Miscellaneous" p:id="aoInfo.Miscellaneous">
        <property name="items">
            <list>
                <bean parent="Uif-InputField-LabelTop"
                      p:propertyName="aoInfo.activityOfferingURL"
                      p:label="Course URL">
                    <property name="control">
                        <bean parent="Uif-TextControl"
                              p:size="30"/>
                    </property>
                </bean>
                <bean parent="Uif-VerticalFieldGroup"
                      p:label="Evaluation"
                      p:fieldLabel.renderColon="false"
                      p:style="margin-bottom:0">
                    <property name="items">
                        <list>
                            <bean parent="Uif-InputField-LabelRight"
                                  p:propertyName="aoInfo.isEvaluated"
                                  p:label="This lecture requires an evaluation"
                                  p:fieldLabel.cssClasses="label-normal"
                                  p:required="false">
                                <property name="control">
                                    <bean parent="Uif-CheckboxControl"/>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
                <bean parent="Uif-VerticalFieldGroup"
                      p:label="Honors Flag"
                      p:fieldLabel.renderColon="false"
                      p:style="margin-bottom:0">
                    <property name="items">
                        <list>
                            <bean parent="Uif-InputField-LabelRight"
                                  p:propertyName="aoInfo.isHonorsOffering"
                                  p:label="This is an honors course"
                                  p:fieldLabel.cssClasses="label-normal"
                                  p:required="false">
                                <property name="control">
                                    <bean parent="Uif-CheckboxControl"/>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

</beans>